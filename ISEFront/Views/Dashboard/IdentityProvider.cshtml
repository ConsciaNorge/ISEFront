@{
    ViewBag.Title = "Identity Provider";
    Layout = "~/Views/Dashboard/Layout/_dashboardLayout.cshtml";
}

<div class="col-md-12" ng-controller="IdentityProviderController as idpVm">
    <div class="ng-cloak col-md-offset-1 col-md-10" ng-hide="!idpVm.viewIdentityProviderDetails">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Identity Provider
            </div>

            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" class="form-control" ng-model="idpVm.idpDetails.name" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Description</label>
                                <input type="text" class="form-control" ng-model="idpVm.idpDetails.description" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">

                            <div class="panel panel-default" ng-hide="!idpVm.viewInstalledCertificate">
                                <div class="panel-heading">
                                    Certificates
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <button class="btn btn-sm" ng-click="idpVm.generateNewCertificate()">Generate new certificate</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row col-md-10 col-md-offset-1" ng-repeat="certificate in idpVm.idpDetails.certificates">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Certificate {{certificate.subjectName}}
                                            </div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        <div class="form-group">
                                                            <label class="control-label">Version</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.version " />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label">Serial number</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.serialNumber" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label class="control-label">Signature algorithm ID</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.signatureAlgorithmId" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label class="control-label">Subject name</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.subjectName" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label class="control-label">Issuer</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.issuer" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label class="control-label">Issuer name</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.issuerName" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label">Valid not before</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.notBefore" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label">Valid not after</label>
                                                            <input type="text" disabled class="form-control" ng-model="certificate.notAfter" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-10 col-md-offset-1">
                                                        <div class="panel panel-default">
                                                            <div class="panel-heading">
                                                                Public key
                                                            </div>
                                                            <div class="panel-body">
                                                                <div class="row">
                                                                    <div class="col-12">
                                                                        <div class="form-group">
                                                                            <label class="control-label">Algorithm</label>
                                                                            <input type="text" disabled class="form-control" ng-model="certificate.publicKeyAlgorithm" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-12">
                                                                        <div class="form-group">
                                                                            <label class="control-label">Subject public key</label>
                                                                            <textarea disabled class="form-control" rows="10">{{certificate.subjectPublicKey}}</textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div classs="row">
                                                                    <div class="col-12">
                                                                        <div class="form-group">
                                                                            <a href="~/Dashboard/idppubliccertificate/{{certificate.serialNumber}}">Download certificate</a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @RenderPage("_IdentityProviderCertificateGeneration.cshtml")

                        <div class="row" ng-hide="!idpVm.viewInstalledCertificate">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="input-group pull-right">
                                        <button class="btn btn-md" ng-click="idpVm.saveChanges()">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

