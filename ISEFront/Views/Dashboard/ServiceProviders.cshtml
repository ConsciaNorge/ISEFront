@{
    ViewBag.Title = "Service Providers";
    Layout = "~/Views/Dashboard/Layout/_dashboardLayout.cshtml";
}

<div class="col-md-12" ng-controller="ServiceProvidersController as spVm">
    <div class="card" ng-hide="!spVm.viewServiceProviders">
        <div class="header">
            <h4 class="title">Service Providers</h4>
        </div>

        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button class="btn btn-md" ng-click="spVm.createNewServiceProviderClicked()">Create</button>
                    </div>
                </div>
            </div>            
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Want Auth Signed</th>
                                <th>Sign SAML Response</th>
                                <th>Sign Assertion</th>
                                <th>Encrypt Assertion</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in spVm.serviceProvidersBrief">
                                <td>{{item.name}}</td>
                                <td>{{item.description}}</td>
                                <td>{{item.wantAuthnRequestSigned}}</td>
                                <td>{{item.signSAMLResponse}}</td>
                                <td>{{item.signAssertion}}</td>
                                <td>{{item.encryptAssertion}}</td>
                                <td>
                                    <button class="btn btn-xs" ng-click="spVm.EditServiceProvider(item.id)">Edit</button>
                                    <button class="btn btn-xs">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @RenderPage("_editServiceProvider.cshtml")
    @RenderPage("_createServiceProvider.cshtml")
</div>


